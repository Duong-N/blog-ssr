<main>
  <!-- Hero Section -->
  <div
    class='hero'
    style="background-image: url('{{#if blog.image}}{{blog.image}}{{else}}/uploads/default.jpg{{/if}}')"
  >
    <div class='hero-content'>
      <h1>{{blog.title}}</h1>
      <div class='post-meta'>
        {{formatDate blog.createdAt}} • Tác giả: {{blog.author}} • Danh mục: {{blog.category.CategoryName}}
      </div>
    </div>
  </div>

  <!-- Post Content Section -->
  <div class='post-detail-section'>
    <div class='post-content'>
      {{#if blog.content}}
        <p>{{{blog.content}}}</p>
      {{else}}
        <p style="text-align: center;">Không có nội dung.</p>
      {{/if}}
    </div>

    <!-- Back to Blog List -->
    <div class='view-more-wrapper'>
      <a href='/blog' class='view-more-btn'>Quay lại danh sách bài viết</a>
    </div>
  </div>
</main>